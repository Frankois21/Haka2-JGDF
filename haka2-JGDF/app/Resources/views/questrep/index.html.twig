                <td>{{ questrep.reponse1 }}</td>
                <td>{{ questrep.reponse2 }}</td>
                <td>{{ questrep.reponse3 }}</td>
                <td>{{ questrep.reponse4 }}</td>
                <td>{{ questrep.solution }}</td>
                <td>
                    <a href="{{ path('questrep_show', { 'id': questrep.id }) }}"class="btn btn-default">show</a>
                    <a href="{{ path('questrep_edit', { 'id': questrep.id }) }}"class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
        </div>
    </div>

{% endblock %}
