{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="table table-hover">
    <h1>Liste de question</h1>
                <a href="{{ path('questrep_new') }}"class="btn btn-success">Cr√©er une nouvelle question</a>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>R1</th>
                <th>R2</th>
                <th>R3</th>
                <th>R4</th>
                <th>Solution</th>
